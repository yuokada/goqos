# Change Log
#
# 2010/09/01 matsumoto_r first release
#
#############################################################################################


#
# qos.init  qos start script.
#
#
# chkconfig: - 66 34
# description: qos provide set Quarity and Service.
#

### BEGIN INIT INFO
# Provides: qos.init
# Required-Start: $local_fs $network
# Required-Stop: $local_fs $network
# Default-Start:
# Default-Stop: 0 1 2 3 4 5 6
# Short-Description: qos init script
# Description: qos provide set Quarity and Service.
### END INIT INFO

if [ -f /etc/init.d/functions ]; then
  . /etc/init.d/functions
  SUCCESS=success
  FAILURE=failure
else
  . /lib/lsb/init-functions
  SUCCESS=log_success_msg
  FAILURE=log_failure_msg
fi

if [ -f /etc/sysconfig/network ]; then
  . /etc/sysconfig/network
  [ ${NETWORKING} = "no" ] && exit 0
fi


RETVAL=0
qos="/usr/local/sbin/qos.sh"
prog="qos.init"
lockdir="/var/lock/subsys"
lockfile="/var/lock/subsys/qos.init"

[ -d $lockdir ] || mkdir $lockdir

[ -f $qos ] || exit 0

start() {
    echo -n $"Starting $prog: "
    $qos start
    RETVAL=$?
    [ $RETVAL = 0 ] && touch $lockfile && $SUCCESS && echo
    [ $RETVAL != 0 ] && $FAILURE && echo
    return $RETVAL
}

stop() {
    echo -n $"Stopping $prog: "
    $qos stop
    RETVAL=$?
    [ $RETVAL = 0 ] && rm -f $lockfile && $SUCCESS && echo
    [ $RETVAL != 0 ] && $FAILURE && echo
    return $RETVAL
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart|reload)
        stop
        start
        RETVAL=$?
        ;;
    condrestart)
        if [ -f $lockfile ]; then
            stop
            start
            RETVAL=$?
        fi
        ;;
    status)
        $qos stats
        RETVAL=$?
        ;;
    *)
    echo $"Usage: $0 {start|stop|restart|condrestart|status}"
    exit 1
esac

exit $RETVAL
